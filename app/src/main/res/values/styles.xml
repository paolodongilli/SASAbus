<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.Base"/>
    <style name="AppTheme.Intro" parent="Theme.Intro"/>
    <style name="AppTheme.Normal" parent="Theme.Normal"/>
    <style name="AppTheme.Settings" parent="Theme.Settings"/>
    <style name="AppTheme.Indigo" parent="Theme.Indigo"/>
    <style name="AppTheme.Blue" parent="Theme.Blue"/>
    <style name="AppTheme.Red" parent="Theme.Red"/>
    <style name="AppTheme.Green" parent="Theme.Green"/>
    <style name="AppTheme.About" parent="Theme.About"/>
    <style name="AppTheme.Route" parent="Theme.Route"/>
    <style name="AppTheme.Parking" parent="Theme.Parking"/>
    <style name="AppTheme.Bus" parent="Theme.Bus"/>
    <style name="AppTheme.Teal" parent="Theme.Teal"/>
    <style name="AppTheme.Trips" parent="Theme.Trips"/>
    <style name="AppTheme.Purple" parent="Theme.Purple"/>
    <style name="AppTheme.StationPicker" parent="Theme.StationPicker"/>
    <style name="AppTheme.BusStop" parent="Theme.BusStop"/>
    <style name="AppTheme.PlannedTrips" parent="Theme.PlannedTrips"/>

    <style name="AppTheme.EcoPoints.Login" parent="Theme.EcoPoints.Login"/>
    <style name="AppTheme.EcoPoints.Register" parent="Theme.EcoPoints.Login"/>

    <style name="BaseStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">@color/text_default</item>
        <item name="colorControlNormal">@color/color_control</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorLink">@color/text_link</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="colorButtonNormal">@color/color_button_normal</item>
    </style>

    <style name="Theme.Intro" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorButtonNormal">@color/color_button_normal</item>
    </style>

    <style name="Theme.Base" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.Normal" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="Theme.About" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_indigo</item>
    </style>

    <style name="Theme.Settings" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="Theme.BusStop" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.PlannedTrips" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.Indigo" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorPrimaryDark">@color/primary_indigo_dark</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Blue" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Red" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Green" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="Theme.Route" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">@color/text_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Parking" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/primary_amber</item>
    </style>

    <style name="Theme.Bus" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.Teal" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryDark">@color/primary_teal_dark</item>
        <item name="colorAccent">@color/primary_red</item>

        <item name="android:textColorPrimary">@color/text_default</item>

        <item name="colorButtonNormal">@color/primary_teal</item>
    </style>

    <style name="Theme.Purple" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_purple_dark</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.Trips" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_blue_grey</item>
        <item name="colorPrimaryDark">@color/primary_blue_grey</item>
        <item name="colorAccent">@color/primary_amber</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.EcoPoints.Login" parent="BaseStyle">
        <item name="colorPrimary">@color/primary_light_blue</item>
        <item name="colorPrimaryDark">@color/primary_light_blue</item>
        <item name="colorAccent">@color/material_pink_A200</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="Theme.StationPicker" parent="BaseStyle">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/divider</item>
        <item name="colorAccent">@color/primary_blue_grey</item>

        <item name="android:windowBackground">@color/black_300</item>

        <item name="android:textColorPrimary">@color/text_default</item>
    </style>

    <style name="MenuOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:actionModeBackground">@color/primary_indigo</item>
        <item name="actionModeBackground">@color/primary_indigo</item>
        <item name="android:background">@color/primary_indigo</item>
        <item name="background">@color/primary_indigo</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primary_indigo</item>
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>

    <style name="TextInputLayout" parent="Theme.About">
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryDark">@color/primary_teal</item>
        <item name="colorAccent">@color/primary_teal</item>
        <item name="colorControlNormal">@color/primary_teal</item>
    </style>

    <style name="TextInputLayout.Hint" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/primary_teal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarOverlay">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarOverlayDark">
        <item name="android:textColorPrimary">@color/text_default</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="colorControlNormal">@color/text_default</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/app_body_text_1</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
    </style>

    <style name="Theme.Search" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/Theme.Search.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/Theme.SearchView</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
    </style>

    <style name="Theme.Search.AutoCompleteTextView"
           parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_default</item>

        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NavigationOverlay">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/default_icon_color2</item>

        <item name="android:textColorSecondary">@color/icon_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Body1Text">
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_1_spacing</item>
    </style>

    <style name="ProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.DayNight.Dialog"/>

    <style name="ColorButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_blue_dark</item>
    </style>

    <style name="TranslucentActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/filter_scrim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.WidgetActivity" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_indigo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextInputLayout.Grey" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlHighlight">@color/material_pink_A200</item>
        <item name="colorControlActivated">@color/material_pink_A200</item>
    </style>

</resources>