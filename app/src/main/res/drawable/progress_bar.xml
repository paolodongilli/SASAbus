<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:startColor="@color/black_200"
                android:centerColor="@color/black_400"
                android:centerY="0.75"
                android:endColor="@color/black_300"
                android:angle="270"
            />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:startColor="@color/card_title_default_color"
                    android:centerColor="@color/card_title_default_color"
                    android:centerY="0.75"
                    android:endColor="@color/card_title_default_color"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:startColor="@color/card_title_default_color"
                    android:centerColor="@color/card_title_default_color"
                    android:centerY="0.75"
                    android:endColor="@color/card_title_default_color"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>